<resources>
    <!-- 自定义对话框样式 -->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 对话框背景 -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- 对话框标题样式 -->
        <item name="android:windowTitleStyle">@style/CustomDialogTitleStyle</item>
    </style>

    <!-- 自定义对话框标题样式 -->
    <style name="CustomDialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#1976D2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>