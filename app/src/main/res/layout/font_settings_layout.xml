<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 上方三分之二区域，半透明遮罩，点击隐藏字体设置层 -->
    <View
        android:id="@+id/fontSettingsOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true" />

    <!-- 下方三分之一区域，字体设置功能区域 -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="字体设置"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 字体大小设置 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_font_size_decrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove"
                                android:contentDescription="减小字体"
                                app:backgroundTint="#2196F3"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="字号"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:id="@+id/tv_font_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="18"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#212121" />

                            </LinearLayout>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_font_size_increase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:contentDescription="增大字体"
                                app:backgroundTint="#2196F3"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- 行距设置 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_line_spacing_decrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove"
                                android:contentDescription="减小行距"
                                app:backgroundTint="#4CAF50"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="行距"
                                    android:textSize="10sp"
                                    android:textColor="#757575"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:id="@+id/tv_line_spacing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4dp"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#212121" />

                            </LinearLayout>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_line_spacing_increase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:contentDescription="增大行距"
                                app:backgroundTint="#4CAF50"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- 字距设置 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_letter_spacing_decrease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_remove"
                                android:contentDescription="减小字距"
                                app:backgroundTint="#FF9800"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="字距"
                                    android:textSize="10sp"
                                android:textColor="#757575"
                                    android:layout_marginBottom="2dp" />

                                <TextView
                                    android:id="@+id/tv_letter_spacing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#212121" />

                            </LinearLayout>

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btn_letter_spacing_increase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_add"
                                android:contentDescription="增大字距"
                                app:backgroundTint="#FF9800"
                                app:tint="@android:color/white"
                                app:fabSize="mini" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>